<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lessugly.mrmoika.registration.CarwashRegistration.FirstStep">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_main"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:contentDescription="logo"
        android:background="@drawable/logo_carwash" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo_main"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:id="@+id/phoneHint"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_secondary" />
        <EditText
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/carwashPhoneCode"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:inputType="number"
            android:maxLength="1"
            android:text="7"
            android:paddingTop="20dp"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carwashPhone"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:inputType="number"
            android:textColorHint="@color/text_hint"
            android:maxLength="15"
            android:hint="@string/phone_hint"
            android:paddingTop="20dp"
            android:layout_marginLeft="48dp"
            android:text=""
            ><requestFocus/></EditText>
      <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carwash_name"
            android:id="@+id/carwashNameHint"
            android:layout_below="@+id/carwashPhone"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_secondary" />
        -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carwashPhone"
            android:paddingTop="10dp">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/carwashName"
                android:layout_below="@+id/carwashPhone"
                android:layout_alignParentStart="true"
                android:inputType="text"
                android:text=""
                android:hint="@string/carwash_name_hint"
                android:textColorHint="@color/text_hint"/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>


</RelativeLayout>
