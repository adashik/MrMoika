<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_main"
    tools:context=".MainActivity"
    style="@style/AppTheme">

    <Button
        android:layout_width="@dimen/main_button_width"
        android:layout_height="wrap_content"
        android:text="@string/car_registration"
        android:id="@+id/carRegButton"
        android:layout_marginBottom="209dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_next"/>

    <Button
        android:layout_width="@dimen/main_button_width"
        android:layout_height="wrap_content"
        android:text="@string/wash"
        android:id="@+id/washRegButton"
        android:layout_alignTop="@+id/carRegButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:onClick="carwashRegistration"
        android:background="@drawable/button_next"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_main"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:contentDescription="logo"
        android:background="@drawable/logo_main" />
</RelativeLayout>
